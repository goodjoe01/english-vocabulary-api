{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", 
     "rootDir": "./src",
     "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "declaration": true                
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node" 
  }
}
